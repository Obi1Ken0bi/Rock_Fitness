<h1>Добавить абонемент</h1>
<form method="post" name="buyContract">
    <label>Клиент
        <select name="idCL">
            {{#each clients}}
                <option value={{this.ID}}>{{this.Name}}</option>
            {{/each}}
        </select>
    </label>
    <label>Дата начала
        <input name="dateStart" type="date">
    </label>
    <label>Дата конца
        <input name="dateEnd" type="date">
    </label>
    <label>Количество посещений
        <input id="n" name="enterNumber" type="number" value="100">
    </label>
    <label>Цена
        <input id="pr" name="price" type="number" value="10000" readonly>
    </label>
    <br>
    <label>Введите имя администратора(Не обязательно)
        <select name="idAdm">
            {{#each admins}}
                <option value={{this.ID}}>{{this.Name}}</option>
            {{/each}}
        </select>

    </label>
    <input type="submit" value="Добавить">
</form>

{{#section 'scripts'}}
    <script>
        const numberElem = document.getElementById('n')
        const pricingElem = document.getElementById('pr')

        numberElem.addEventListener('change', () => {
            pricingElem.value = numberElem.value * 100
        })

    </script>
{{/section}}